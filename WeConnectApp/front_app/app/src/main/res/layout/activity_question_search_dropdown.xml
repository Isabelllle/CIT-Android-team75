<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuestionSearchDropdown">

    <!--  theme  -->
    <include layout="@layout/survey_questions_layout" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/type_dropdown_theme"
        android:text="@string/question_demographic_question"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto_bold"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"/>

    <!-- Question text   -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/type_dropdown_question_text"
        android:layout_below="@id/type_dropdown_theme"
        android:text="@string/type_search_dropdown_question_text_sample"
        android:textSize="20sp"
        android:padding="20dp"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto_regular"
        android:layout_marginTop="40dp"
        android:layout_marginStart="40dp" />

    <!-- answer   -->
    <AutoCompleteTextView
        android:id="@+id/dropdown_text_box"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:completionThreshold="1"
        android:hint="@string/enter_search_country"
        android:layout_below="@id/type_dropdown_question_text"
        android:layout_centerHorizontal="true"
        android:dropDownWidth="wrap_content"
        android:dropDownHeight="wrap_content"
        android:drawablePadding="10dp"
        />



</RelativeLayout>