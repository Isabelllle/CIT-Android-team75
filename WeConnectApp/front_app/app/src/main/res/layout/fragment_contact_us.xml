<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.contactUs.ContactUsFragment">
    <include layout="@layout/menu_base_layout"></include>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/organisation_detail"
            android:layout_marginStart="40dp"
            android:layout_marginTop="90dp"
            android:text="@string/contact_us"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />
        <ImageView
            android:layout_width="120dp"
            android:layout_height="260dp"
            android:layout_marginTop="30dp"
            android:id="@+id/contact_us_image"
            android:src="@drawable/contact_us_cartoon"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/organisation_detail"
            android:contentDescription="@string/contact_us_image"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/contact_us_image"
            android:layout_marginStart="50dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="50dp"
            android:fontFamily="@font/roboto_regular"
            android:padding="16dp"
            android:text="@string/contact_us_content"
            android:textColor="@color/black"
            android:textSize="20sp" />
    </RelativeLayout>

</FrameLayout>