<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/survey_base_layout"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="88dp"></include>


    <!-- next question button  -->
    <Button
        android:id="@+id/survey_question_btn_1"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="150dp"
        android:background="@drawable/survey_detail_btn_templet"
        android:elevation="5dp"
        android:text="@string/survey_detail_btn"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent">
    </Button>

    <!--  previous question button  -->
    <Button
        android:id="@+id/survey_question_btn_2"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:background="@drawable/survey_detail_btn_templet"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="150dp"
        android:text="@string/survey_question_btn"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

    </Button>
</androidx.constraintlayout.widget.ConstraintLayout>